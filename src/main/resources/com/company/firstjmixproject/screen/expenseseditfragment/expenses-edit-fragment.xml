<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://jmix.io/schema/ui/fragment">

    <data>
        <instance id="expensesDc"
                  class="com.company.firstjmixproject.app.dto.CategoryExpensesByPeriodDto">
            <fetchPlan extends="_base">
            </fetchPlan>
            <loader/>
        </instance>
    </data>

    <actions>
        <action id="expensesCalculate"/>
    </actions>

    <layout>
        <form dataContainer="expensesDc" id="dataEditForm" caption="Траты по категориям">
            <column>
                <field property="category" id="categoryField"/>
                <dateField id="startField" property="start"/>
                <dateField id="endField" property="end"/>
            </column>
        </form>
        <button caption="посчитать" action="expensesCalculate"/>
    </layout>
</fragment>
