<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://operationTypeBrowse.caption"
        focusComponent="operationTypesTable">
    <data readOnly="true">
        <collection id="operationTypesDc"
                    class="com.company.firstjmixproject.entity.OperationType">
            <fetchPlan extends="_base"/>
            <loader id="operationTypesDl">
                <query>
                    <![CDATA[select e from idid_OperationType e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="operationTypesTable" spacing="true">
        <filter id="filter"
                dataLoader="operationTypesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="operationTypesTable"
                    width="100%"
                    dataContainer="operationTypesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="operationTypesTable.create"/>
                <button id="editBtn" action="operationTypesTable.edit"/>
                <button id="removeBtn" action="operationTypesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
